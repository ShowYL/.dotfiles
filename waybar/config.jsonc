{
    "position": "top",
    "spacing": 10,
    "modules-left": [
        "group/group-power",
        "hyprland/workspaces",
        "group/group-system",
        "custom/updates"
    ],
    "modules-center": [
        "custom/notification",
        "clock"
    ],
    "modules-right": [
        "group/group-light",
        "custom/kb-layout",
        "pulseaudio",
        "bluetooth",
        "network",
        "battery"
    ],
    "group/group-power": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 600,
            "children-class": "not-power",
            "transition-left-to-right": true
        },
        "modules": [
            "custom/power",
            "custom/lock",
            "custom/reboot",
            "custom/quit"
        ]
    },
    "custom/quit": {
        "format": " Û∞óº ",
        "tooltip": false,
        "on-click": "hyprctl dispatch exit"
    },
    "custom/lock": {
        "format": " Û∞çÅ ",
        "tooltip": false,
        "on-click": "hyprlock"
    },
    "custom/reboot": {
        "format": " Û∞úâ ",
        "tooltip": false,
        "on-click": "reboot"
    },
    "custom/power": {
        "format": "ÔÄë ",
        "tooltip": false,
        "on-click": "shutdown now"
    },
    "hyprland/workspaces": {
        "format": "{icon}",
        "on-click": "activate",
        "format-icons": {
            "1": "ÓôÑ",
            "2": "ÔÑ°",
            "3":"Ó™Ö",
            "default": "ÔÑë"
        },
        "sort-by-number": true,
        "persistent-workspaces": {
            "1": [],
            "2": [],
            "3": []
        }
    },
    "group/group-system": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 600,
            "children-class": "not-system",
            "transition-left-to-right": true
        },
        "modules": [
            "custom/settings",
            "memory",
            "disk"
        ]
    },
    "custom/settings": {
        "format": "Ó≠ë ",
        "on-click": "nwg-look",
        "tooltip": false
    },
    "memory": {
        "interval": 2,
        "format": "  {used:0.1f}G/{total:0.1f}G ÓøÖ "
    },
    "disk": {
        "interval": 30,
        "format": "  {specific_used:0.2f}G/{specific_total:0.2f}G ÔÇ† ",
        "unit": "GB"
    },
    "custom/updates": {
        "exec": "bash ~/.config/waybar/scripts/checkupdates.sh",
        "on-click": "kitty sudo dnf upgrade", // update on click
        "interval": 900, // refresh every 15 minutes
        "return-type": "json",
        "format": "{icon}",
        "format-alt": "{icon} {text}",
        "format-icons": {
            "has-updates": "Ôã±", // icon when updates needed
            "updated": "" // icon when all packages updated
        }
    },
    "custom/notification": {
        "tooltip": false,
        "format": "{icon}",
        "format-icons": {
            "notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
            "none": "ÔÇ¢",
            "dnd-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
            "dnd-none": "Ôá∑",
            "inhibited-notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
            "inhibited-none": "ÔÇ¢",
            "dnd-inhibited-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
            "dnd-inhibited-none": "Ôá∑"
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "escape": true
    },
    "clock": {
        "format": "{:%H:%M}",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "format-alt": "üìÖ {:%d/%m/%Y}",
        "interval": 1,
        "calendar": {
            "mode": "month"
        },
        "actions": {
            "on-click-right": "mode",
            "on-scroll-up": "shift_down",
            "on-scroll-down": "shift_up"
        }
    },
    "group/group-light": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 600,
            "children-class": "not-light",
            "transition-left-to-right": false
        },
        "modules": [
            "custom/sun",
            "backlight/slider"
        ]
    },
    "backlight/slider": {
        "min": 0,
        "max": 100,
        "orientation": "horizontal",
        "device": "intel_backlight"
    },
    "custom/sun": {
        "format": " Ôî¢ ",
        "tooltip": false
    },
    "custom/kb-layout": {
        "exec": "~/.config/waybar/scripts/kb-layout.sh",
        "interval": 1,
        "format": "Û∞åå {}",
        "tooltip": false,
        "on-click": "~/.config/hypr/scripts/toggle-layout.sh"
    },
    "pulseaudio": {
        "interval": 1,
        "format": "{volume}% {icon} {format_source}",
        "format-bluetooth": "{volume}% {icon} Ôäî {format_source}",
        "format-bluetooth-muted": "Û∞ùü {icon} Ôäî {format_source}",
        "format-muted": "Û∞ùü {format_source}",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ± ",
        "format-icons": {
            "headphone": "ÔÄ•",
            "headset": "Óπô",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": [
                "ÔÄ¶",
                "ÔÄß",
                "ÔÄ®"
            ]
        },
        "on-click": "pavucontrol"
    },
    "bluetooth": {
        "interval": 1,
        "format": "Ôäî {status}",
        "format-disabled": "",
        "format-connected": "Ôäî {num_connections} connected",
        "tooltip-format": "{controller_alias}\t{controller_address}",
        "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
        "tooltip-format-enumerate-connected-battery": "{device_battery_percentage}%\t{device_alias}\t{device_address}",
        "on-click": "~/.config/waybar/scripts/rofi-bluetooth"
    },
    "network": {
        "interval": 1,
        "format-wifi": "{signalStrength}% Ôá´ ",
        "format-ethernet": "{ipaddr}/{cidr} Û∞àÄ ",
        "tooltip-format": "{essid}",
        "format-linked": "{ifname} (No IP) ÔÉÅ ",
        "format-disconnected": "Disconnected ‚ö† ",
        "on-click": "~/.config/waybar/scripts/rofi-wifi-menu.sh"
    },
    "battery": {
        "interval": 1,
        "states": {
            "warning": 40,
            "critical": 20
        },
        "format": "{capacity} {icon} ",
        "format-full": "{capacity} {icon} ",
        "format-charging": "{capacity} Û∞ÇÑ",
        "format-plugged": "{capacity} Ôá¶",
        "format-alt": "{time} {icon} ",
        "format-icons": [
            "ÔâÑ",
            "ÔâÉ",
            "ÔâÇ",
            "ÔâÅ",
            "ÔâÄ"
        ]
    }
}
